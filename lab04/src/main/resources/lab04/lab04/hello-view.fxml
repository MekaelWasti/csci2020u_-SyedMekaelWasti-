<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="lab04.lab04.HelloController"
          xmlns:fx="http://javafx.com/fxml" alignment="BASELINE_LEFT" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>


    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="username" promptText="Username" prefWidth="200"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="password" promptText="Password"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Full Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="fullname" promptText="Full Name"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="E-Mail:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="email" promptText="E-mail"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label fx:id="emailCheck" text=""
           GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Label text="Phone #:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="phonenumber" promptText="Phone Number"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Date of Birth:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <DatePicker fx:id="dateofbirth" promptText="Date of Birth" prefWidth="200"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>


    <Button onAction="#onRegisterButtonClick"  GridPane.columnIndex="1" GridPane.rowIndex="7">Register</Button>

</GridPane>